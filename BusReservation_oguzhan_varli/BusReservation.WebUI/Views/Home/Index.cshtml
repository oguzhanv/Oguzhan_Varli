@model List<City>
@*@{
    ViewData["Title"] = "Home Page";
}*@

<div class="home-select d-flex row">
    <img src="/images/navbar-image-deeme.jpg" class="img-fluid card-img">
    <div class="choose-route col-12">
        <form class="bg-light" asp-action="FindRoute">
            <div class="row">
                <div class="mb-3 col-md-3 col-sm-2">
                    <label for="exampleInputEmail1" class="form-label">Nereden</label>
                    <input type="text" class="form-control" id="city" list="@Model" placeholder="İstanbul"/>
                    <datalist id="@Model">
                        @foreach (var item in Model)
                        {
                            <option value="@item.CityName"></option>
                        }
                    </datalist>
                </div>
                <div class="change-route col-1"><i class="fa-solid fa-arrow-right-arrow-left"></i></div>
                <div class="mb-3 col-md-3 col-sm-2">
                    <label for="exampleInputEmail1" class="form-label">Nereye</label>
                    <input type="text" class="form-control" id="city" list="@Model" placeholder="Ankara"/>
                    <datalist id="@Model">
                    @foreach (var item in Model)
                    {
                        <option value="@item.CityName"></option>
                    }
                    </datalist>
                </div>
                <div class="mb-3 col-md-3 col-sm-2">
                    <label for="exampleInputEmail1" class="form-label">Gidiş Tarihi</label>
                    <input type="date" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <div class="mb-3 col-md-3 col-sm-2">
                    <label for="exampleInputEmail1" class="form-label">Dönüş Tarihi</label>
                    <input type="date" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                </div>
                <div class="mb-3 col-md-3 col-sm-2">
                    <label for="exampleInputEmail1" class="form-label">Yolcu Sayısı</label>
                    <input type="number" class="form-control" id="abc" list="passanger-number" placeholder="1" />
                    <datalist id="passager-number">
                        <option value="1" />
                        <option value="2" />
                        <option value="3" />
                        <option value="4" />
                        <option value="5" />
                    </datalist>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

